# Database Configuration
DB_NAME=REA_DB
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# API Configuration
ASPNETCORE_ENVIRONMENT=Development

# JWT Configuration (Generate a secure 32+ character key)
JWT_SECRET_KEY=your_super_secret_key_minimum_32_characters_long!
JWT_ISSUER=REA-API
JWT_AUDIENCE=REA-Client
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# Google Cloud (for OCR)
GOOGLE_CLOUD_CREDENTIALS_PATH=config/google-cloud-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-google-project-id

# Client Configuration
NUXT_PUBLIC_API_BASE=http://localhost:8080/api

# Email Configuration (Future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password